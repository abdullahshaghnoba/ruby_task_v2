
<div class="container">
  <h2>Log in</h2>
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: 'styled-form' }) do |f| %>
    <div class="container">
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
      </div>

      <div>
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'text-field' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div>
        <%= f.submit "Log in", class: 'button' %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
