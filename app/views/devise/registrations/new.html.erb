<div class="container">
  <h2>Sign up</h2>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { class: 'styled-form' }) do |f| %>
    <%= devise_error_messages! %>
    <div class="container">
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'text-field' %>
    </div>

    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
    </div>

    <div>
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'text-field' %>
    </div>

    <div>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-field' %>
    </div>

    <div>
      <%= f.submit "Sign up", class: 'button' %>
    </div>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
